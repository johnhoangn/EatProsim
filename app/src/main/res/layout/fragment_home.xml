<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".HomeFragment" android:id="@+id/frameLayout">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="597dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/filterSpinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/restaurantList"/>
    <SearchView
            android:layout_width="375dp"
            android:layout_height="16dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:id="@+id/searchbar" app:layout_constraintHorizontal_bias="0.0"/>
    <Spinner
            android:layout_width="375dp"
            android:layout_height="16dp"
            android:id="@+id/sortSpinner" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/searchbar"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/sortView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Spinner
            android:layout_width="375dp"
            android:layout_height="16dp"
            android:id="@+id/filterSpinner" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sortSpinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sortView" android:textSize="12sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/searchbar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:textAlignment="viewStart" android:text="@string/sortLabel"/>
    <TextView
            android:text="@string/filterLabel"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/filterView" android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/sortSpinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="8dp" android:textAlignment="viewStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>